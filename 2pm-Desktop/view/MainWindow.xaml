                      HorizontalContentAlignment="Center" Margin="18,239,0,0" Height="37" RenderTransformOrigin="0.5,0.5" Width="110" Foreground="#FFBEBEBE">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Rectangle HorizontalAlignment="Center" Height="62" Margin="0,242,0,0" VerticalAlignment="Top" Width="1">
                        <Rectangle.Stroke>
                            <SolidColorBrush Color="White" Opacity="0.5"/>
                        </Rectangle.Stroke>
                    </Rectangle>


                    <Button x:Name="settingBtn" Style="{StaticResource btncutsomstylePlain}" HorizontalAlignment="Right" Margin="0,264,88,0" Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="21" Height="20" Background="{x:Null}" Click="clickExit">
                        <Image Source="/view/settings.png" />
                    </Button>

                    <Button x:Name="infoBtn" Style="{StaticResource btncutsomstylePlain}" HorizontalAlignment="Right" Margin="0,264,60,0" Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="20" Height="20" Background="{x:Null}" Click="clickExit">
                        <Image Source="/view/info.png" />
                    </Button>

                    <Button x:Name="logoutBtn" Style="{StaticResource btncutsomstylePlain}" HorizontalAlignment="Right" Margin="0,264,30,0" Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="21" Height="20" Background="{x:Null}" Click="clickLogout">
                        <Image Source="/view/exit.png" />
                    </Button>

                </Grid>

                <Grid x:Name="settingScreen" Margin="23,36,23,29" Visibility="Hidden" Background="#FFC82222">

                </Grid>

            </Grid>
        </Viewbox>
    </Border>
</Window>
