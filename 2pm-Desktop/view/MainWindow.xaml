                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/view/play.png" Stretch="UniformToFill" Height="51" Width="48" RenderTransformOrigin="0.5,0.5" >
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="0"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <TextBlock Text="Punch in" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="Thin" 
                   FontSize="11" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="pause" Style="{StaticResource btncutsomstylePlain}" 
        HorizontalAlignment="Right" Margin="0,16,15,0" 
        Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" 
        Foreground="{x:Null}" Width="110" Height="101" IsEnabled="False" Click="breakIn_click">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Button.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/view/pause.png" Height="51" Width="48" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="0"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <TextBlock Text="Break in" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="Thin" 
                   FontSize="11" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="resume" Style="{StaticResource btncutsomstylePlain}" 
        HorizontalAlignment="Right" Margin="0,125,134,0" 
        Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" 
        Foreground="{x:Null}" Width="110" Height="101" IsEnabled="False" Click="breakOut_click">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Button.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/view/next.png" Stretch="Fill" Height="51" Width="48" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="0"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <TextBlock Text="Break out" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="Thin" 
                   FontSize="11" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="stop" Style="{StaticResource btncutsomstylePlain}" 
        HorizontalAlignment="Right" Margin="0,125,15,0" 
        Cursor="Hand" VerticalAlignment="Top" BorderBrush="{x:Null}" 
        Foreground="{x:Null}" Width="110" Height="101" IsEnabled="False" Click="punchOut_click">
                        <Button.Background>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Button.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image Source="/view/stop.png" Height="51" Width="48" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="0"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <TextBlock Text="Punch out" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="White" 
                   FontWeight="Thin" 
                   FontSize="11" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>



                    <!--stop screenshot service-->
                    <Ellipse x:Name="bgEc" HorizontalAlignment="Left" Height="13" Margin="29,278,0,0" VerticalAlignment="Top" Width="13" Fill="Gray"/>
                    <!--run screenshot service-->
                    <Ellipse x:Name="BlinkingEllipse"
         HorizontalAlignment="Left" 
         Height="13" 
         Margin="29,278,0,0"
         VerticalAlignment="Top" 
         Width="13" 
         Fill="Gray"
         Visibility="Collapsed">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <!-- Trigger when the Ellipse becomes Visible -->
                                    <DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource Self}}" Value="Visible">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <!-- Animation for fading out -->
                                                    <DoubleAnimation 
                                    Storyboard.TargetProperty="Opacity" 
                                    From="1.0" 
                                    To="0.0" 
                                    Duration="0:0:0.9" 
                                    AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>

                                        <DataTrigger.ExitActions>
                                            <StopStoryboard/>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>


                    <Label x:Name="subtile" Content="Stopped" HorizontalAlignment="Left" Margin="40,266,0,0" VerticalAlignment="Top" FontSize="16" Height="35" Width="82" Background="{x:Null}" Foreground="#FF6C6C6C" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label x:Name="processLabel" Content="" HorizontalAlignment="Left" Margin="22,288,0,0" VerticalAlignment="Top" FontSize="8" Foreground="#FF989898" FontWeight="ExtraLight" Height="32" RenderTransformOrigin="0.5,0.5" Width="221">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label x:Name="timeLabel"
                      Content="00:00:00"
