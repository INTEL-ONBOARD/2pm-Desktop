<UserControl x:Class="_2pm_Desktop.view.report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="166" Width="220" OpacityMask="#FFE02121" Margin="3,0,3,0">
    <Grid Background="Transparent">
        <Border BorderBrush="White" BorderThickness="1" CornerRadius="20" Background="Transparent" Margin="0,0,0,0">
            <TextBox x:Name="datainput" 
         Text="type here" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Width="178" 
         Height="146" 
         TextWrapping="Wrap" 
         AcceptsReturn="True" 
         Background="Transparent" 
         Foreground="White" 
         BorderBrush="White" 
         BorderThickness="0" 
         MouseLeave="getDataSave" 
         MouseEnter="getClear">
                <TextBox.ToolTip>
                    <ToolTip Content="{Binding title}" 
                 Background="Gray" 
                 Foreground="White" 
                 FontSize="12" />
                </TextBox.ToolTip>
            </TextBox>

        </Border>
    </Grid>
</UserControl>
